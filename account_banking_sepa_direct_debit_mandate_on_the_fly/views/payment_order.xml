<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="payment_order_view_form" model="ir.ui.view">
            <field name="model">payment.order</field>
            <field name="inherit_id" ref="account_payment.view_payment_order_form" />
            <field name="arch" type="xml">
                <button name="cancel" position="before">
                    <field name="is_missing_mandates" invisible="True" />
                    <button type="object" name="action_create_missing_sdd_mandates" string="Create missing mandates" confirm="Create missing direct debit mandates?" attrs="{'invisible': ['|', ('is_missing_mandates', '=', False), ('state', 'not in', ['draft', 'open'])]}" />
                </button>
            </field>
        </record>
    </data>
</openerp>
